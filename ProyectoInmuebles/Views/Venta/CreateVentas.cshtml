@model ProyectoInmuebles.Models.Venta

@{
    ViewData["Title"] = "CreateVentas";
}

<h1>Añadir Nueva Venta</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateVentas">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idVenta" class="control-label"></label>
                <input asp-for="idVenta" class="form-control" />
                <span asp-validation-for="idVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idInmueble" class="control-label"></label>
                 @Html.DropDownList("idInmueble", ViewBag.inmuebles as SelectList,
                                   "Seleccione", new { @class = "form-select" })
                <span asp-validation-for="idInmueble" class="text-danger"></span>
            </div>      
            <div class="form-group">
                <label asp-for="idEmpleado" class="control-label"></label>
                @Html.DropDownList("idEmpleado", ViewBag.empleado as SelectList,
                                   "Seleccione", new { @class = "form-select" })
                <span asp-validation-for="idEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreCliente" class="control-label"></label>
                <input asp-for="nombreCliente" class="form-control" />
                <span asp-validation-for="nombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nroDocumento" class="control-label"></label>
                <input asp-for="nroDocumento" class="form-control" />
                <span asp-validation-for="nroDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idCondicion" class="control-label"></label>
               @Html.DropDownList("idCondicion", ViewBag.condiciones as SelectList,
                                   "Seleccione", new { @class = "form-select" })
                <span asp-validation-for="idCondicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idFormaPago" class="control-label"></label>
                  @Html.DropDownList("idFormaPago", ViewBag.pagos as SelectList,
                                   "Seleccione", new { @class = "form-select" })
                <span asp-validation-for="idFormaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="totalVenta" class="control-label"></label>
                <input asp-for="totalVenta" class="form-control" />
                <span asp-validation-for="totalVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idTipoInmueble" class="control-label"></label>
               @Html.DropDownList("idTipoInmueble", ViewBag.tipos as SelectList,
                                   "Seleccione", new { @class = "form-select" })
                <span asp-validation-for="idTipoInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="totalGeneral" class="control-label"></label>
                <input asp-for="totalGeneral" class="form-control" />
                <span asp-validation-for="totalGeneral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaVenta" class="control-label"></label>
                <input asp-for="fechaVenta" class="form-control" />
                <span asp-validation-for="fechaVenta" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexVentas">Volver</a> 
</div>
<br />

<div class="alert alert-info">
    <p>@ViewBag.MENSAJE</p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
